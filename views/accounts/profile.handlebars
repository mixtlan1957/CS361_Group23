

<div class="container" id="profileform">
  <h1>Welcome to your profile {{username}}</h1>
  <form action="/signup" method="post">
    <div class="form-group row">
      <label for="fname" class="col-sm-2 col-form-label">First:</label>
      <div class="col-sm-10">
        <input type="text" name="fname" value="{{fname}}" id="fname" disabled>
      </div>
    </div>
    <div class="form-group row">
      <label for="lname" class="col-sm-2 col-form-label">Last:</label>
      <div class="col-sm-10">
        <input type="text" name="lname" value="{{lname}}" id="lname" disabled>
      </div>
    </div>
    {{#if sname}}
      <div class="form-group row">
        <label for="age" class="col-sm-2 col-form-label">Age:</label>
        <div class="col-sm-10">
          <input type="text" name="age" value="{{age}}" id="age"disabled>
        </div>
      </div>
      <div class="form-group row">
        <label for="grade" class="col-sm-2 col-form-label">Grade:</label>
        <div class="col-sm-10">
          <input type="text" name="grade" value="{{grade}}" id="grade"disabled>
        </div>
      </div>
      <div class="form-group row">
        <label for="sname" class="col-sm-2 col-form-label">School:</label>
        <div class="col-sm-10">
          <input type="text" name="sname" value="{{sname}}" id="sname"disabled>
        </div>
      </div>
    {{/if}}

    {{#if cname}}
      <div class="form-group row">
        <label for="cname" class="col-sm-2 col-form-label">Company:</label>
        <div class="col-sm-10">
          <input type="text" name="cname" value="{{cname}}" id="cname"disabled>
        </div>
      </div>
    {{/if}}
    <div class="form-group row">
      <label for="username" class="col-sm-2 col-form-label">Username:</label>
      <div class="col-sm-10">
        <input type="text" name="username" value="{{username}}" id="username"disabled>
      </div>
    </div>
    <div class="form-group row">
      <label for="email" class="col-sm-2 col-form-label">E-mail:</label>
      <div class="col-sm-10">
        <input type="text" name="email" value="{{email}}" id="email"disabled>
      </div>
    </div>
  </form>
</div>